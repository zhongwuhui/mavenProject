<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="wk.dao.TestDao">


    <select id="selectShMessage" parameterType="wk.entity.shEntity" resultType="wk.entity.shEntity">
        select a.* from sh a where 1=1
        <if test="ywh!=null">
            and a.ywh=#{ywh}
        </if>
        <if test="qlbm!=null">
            and a.qlbm=#{qlbm}
        </if>
        <if test="qlbsm!=null">
            and a.qlbsm=#{qlbsm}
        </if>

        <if test="islike==1">
            <if test="bdcdyh!=null">
                and a.bdcdyh=#{bdcdyh}
            </if>
            <if test="zl!=null">
                and a.zl=#{zl}
            </if>
        </if>
        <if test="islike==0">
           <if test="bdcdyh!=null">
               and a.bdcdyh like '%'|| #{bdcdyh} ||'%'
           </if>
            <if test="zl!=null">
                and a.zl like '%'|| #{zl}  ||'%'
            </if>

        </if>


    </select>

    <select id="selectCeshiyongMessage" parameterType="wk.entity.ceshiyongEntity" resultType="wk.entity.ceshiyongEntity">
        select a.* from ceshiyong a WHERE 1=1
        <if test="userId!=null or userId!=''">
            and a.userId=#{userId}
        </if>
        <if test="userName!=null or userName!='' ">
            and a.userName=#{userName}
        </if>
        <if test="NumberId!=null or NumberId!=''" >
            and a.NumberId=#{NumberId}
        </if>
        <if test="roler!=null or roler!=''">
            and a.roler=#{roler}
        </if>
        <if test="classMyId!=null or classMyId!=''">
            and a.classMyId=#{classMyId}
        </if>
    </select>

