    <insert id="insertShmessage" parameterType="wk.entity.shEntity">
        <selectKey keyProperty="bsm" order="BEFORE" resultType="java.lang.String">
            SELECT LAST_INSERT_ID()
        </selectKey>
        insert into sh (
            BSM,
            YWH,
            QLBM,
            QLBSM,
            QLRMC,
            ZL,
            BDCDYH
        )
        VALUE (
         "1",
        "1",
        "1",
        "1",
        "1",
        "1",
        "1"



        )


    </insert>

    <insert id="csadd" parameterType="java.util.Map">
        insert into users
        <foreach collection="key" item="item" index="index" open="(" separator="," close=")">
            ${item}
        </foreach>
        values
        <foreach collection="value" item="item" index="index" open="(" separator="," close=")">
            #{item}
        </foreach>
    </insert>

    <delete id="deleteShmessage" parameterType="java.lang.String">
        DELETE FROM  sh where bsm=#{bsm}

    </delete>



