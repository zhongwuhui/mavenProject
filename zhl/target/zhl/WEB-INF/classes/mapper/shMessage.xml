<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="wk.dao.TestDao">


    <select id="selectShMessage" parameterType="wk.entity.shEntity" resultType="wk.entity.shEntity">
        select a.* from sh a where 1=1
        <if test="ywh!=null">
            and a.ywh=#{ywh}
        </if>
        <if test="qlbm!=null">
            and a.qlbm=#{qlbm}
        </if>
        <if test="qlbsm!=null">
            and a.qlbsm=#{qlbsm}
        </if>

        <if test="islike==1">
            <if test="bdcdyh!=null">
                and a.bdcdyh=#{bdcdyh}
            </if>
            <if test="zl!=null">
                and a.zl=#{zl}
            </if>
        </if>
        <if test="islike==0">
           <if test="bdcdyh!=null">
               and a.bdcdyh like '%'|| #{bdcdyh} ||'%'
           </if>
            <if test="zl!=null">
                and a.zl like '%'|| #{zl}  ||'%'
            </if>

        </if>


    </select>

